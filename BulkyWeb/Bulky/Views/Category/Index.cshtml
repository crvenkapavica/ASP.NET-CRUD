@model List<Category>

<div class="container col">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="pt-0" style="color: honeydew; font-family: 'Liberation Mono'">CATEGORY LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped text-sm-center" data-bs-theme="dark">
        <thead style="line-height: 33px">
        <tr>
            <th class="text-info text-bg-secondary">
                Category Name
            </th>
            <th class="text-info text-bg-secondary">
                Display Order
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td style="color: darkkhaki">@obj.Name</td>
                <td style="color: darkkhaki">@obj.DisplayOrder</td>
            </tr>
        }
        </tbody>
    </table>
</div>