@model List<Product>
<div class="container col">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="pt-0" style="color: honeydew; font-family: 'Liberation Mono'">PRODUCT LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i> Add New Product
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (var product in Model.OrderBy(e => e.Title))
        {
            <div class="col-4">
                <table class="table table-bordered table-striped text-sm-center" data-bs-theme="dark">
                    <thead style="line-height: 14px">
                    <tr>
                        <th class="text-info text-bg-dark" colspan="2">
                            IMAGE
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="text-info">Title</td>
                        <td style="color: darkkhaki">@product.Title</td>
                    </tr>
                    <tr>
                        <td class="text-info">Author</td>
                        <td style="color: darkkhaki">@product.Author</td>
                    </tr>
                    <tr>
                        <td class="text-info pt-3">Description</td>
                        <td style="color: darkkhaki; font-size: 11px">@product.Description</td>
                    </tr>
                    <tr>
                        <td class="text-info">ISBN</td>
                        <td style="color: darkkhaki">@product.ISBN</td>
                    </tr>
                    <tr>
                        <td class="text-info">Category</td>
                        <td>TEMP_CAT</td>
                    </tr>
                    <tr>
                        <td class="text-info">Price</td>
                        <td style="color: darkkhaki">
                            @product.ListPrice
                            @product.Price
                            @product.Price50
                            @product.Price100
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a asp-action="Edit" asp-route-title="@product.Title" class="btn btn-secondary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>